#!/usr/bin/env python
import sys

from pypdf import PdfReader, PdfWriter

reader = PdfReader(sys.argv[1])
writer = PdfWriter()

# Add page from reader, but crop it to half size.
page = reader.pages[0]
page.mediabox.lower_left = (
    page.mediabox.right * 0.12,
    page.mediabox.top * 0.550,
)
page.mediabox.upper_right = (
    page.mediabox.right * 0.75,
    page.mediabox.top * 0.528,
)
writer.add_page(page)

# Write to pypdf-output.pdf.
with open("pypdf-output.pdf", "wb") as fp:
    writer.write(fp)
